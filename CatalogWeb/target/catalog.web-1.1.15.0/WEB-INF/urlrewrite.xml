<?xml version="1.0" encoding="utf-8"?>
<urlrewrite>

    <rule>
        <from>^/main$</from>
        <to>/pages/main.jsf</to>
    </rule>
    <rule>
        <from>^/filter$</from>
        <to>/pages/filter.jsf</to>
    </rule>

    <outbound-rule>
        <from>^/pages/main.jsf$</from>
        <to>/main</to>
    </outbound-rule>

    <outbound-rule>
        <from>^/pages/filter.jsf$</from>
        <to>/filter</to>
    </outbound-rule>

</urlrewrite>